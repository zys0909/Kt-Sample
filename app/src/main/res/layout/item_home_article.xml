<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_article"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_follow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainText"
                android:maxLines="2"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                tools:text="Android多线程技术选型最全指南(part 2 - 认识解决方案)"
                app:layout_constraintStart_toEndOf="@id/iv_follow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_state"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_state_top"
                app:layout_constraintStart_toStartOf="@id/atv_title"
                app:layout_constraintTop_toBottomOf="@id/atv_title"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="2"
                android:textColor="@color/colorMediumText"
                app:layout_constraintStart_toEndOf="@id/iv_state"
                app:layout_constraintTop_toBottomOf="@id/atv_title"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="作者：鸿洋 分类： 干货资源 / 课程推荐 时间：2019-07-14"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
