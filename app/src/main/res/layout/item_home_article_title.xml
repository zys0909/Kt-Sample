<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMainText"
            android:maxLines="2"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:text="最新博文"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/atv_more"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorMediumText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/atv_title"
            app:layout_constraintBottom_toBottomOf="@id/atv_title"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:text="更多"/>

</androidx.constraintlayout.widget.ConstraintLayout>
