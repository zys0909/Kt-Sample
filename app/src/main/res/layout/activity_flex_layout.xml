<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <com.zys.widget.flextag.FlexTagLayout
        android:id="@+id/flexTagLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        app:flexTag_horizontal_space="4dp"
        app:flexTag_max_lines="0"
        app:flexTag_stroke_color="@android:color/black"
        app:flexTag_stroke_width="1dp"
        app:flexTag_textSize="16dp"
        app:flexTag_vertical_space="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>